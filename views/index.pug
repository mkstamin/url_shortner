doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")

        //- bootstrap
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-wEmeIV1mKuiNpC+IOBjI7aAzPcEZeedi5yW5f2yOq55WWLwNGmvvx4Um1vskeMj0" crossorigin="anonymous")

        //- favicon
        link(rel="shortcut icon", href="img/favicon.ico", type="image/x-icon")

        //- custom css
        link(rel="stylesheet", href="css/style.css")

        title Url Shortner | #{taitle}
    body 

        .container
            .row.justify-content-md-center
                .col-md-auto
                    .form-area.my-5
                        form.row.g-3(action='/' method='POST')
                            .col-auto
                                input#urlInput.form-control(type='url' placeholder='your url' name='fullUrl' required)
                            .col-auto
                                button.btn.btn-primary.mb-3(type='submit' name='btn') Shortner
                    if deta
                        form.row.g-3
                            .col-auto
                                input#shortUrl.form-control(type='url' value=`${deta.shortUrl}` name='shortUrl')
                            .col-auto
                                button.btn.btn-primary.mb-3#copyBtn copy
                    .tebel-area.my-5
                        table.table
                            thead
                                tr
                                    th(scope='col') #
                                    th(scope='col') Full Url
                                    th(scope='col') Short Url
                                    th(scope='col') Clicks
                            tbody
                                each url, i in urls
                                    tr
                                        th(scope='row')=i+1
                                        td
                                            a(href=`${url.fullUrl}` target='_blank')=url.fullUrl
                                        td
                                            a(href=`${url.shortUrl}` target='_blank')=url.shortUrl
                                        td=url.clicks


        //- bootstrap
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-p34f1UUtsS3wqzfto5wAAmdvj+osOnFyQFpp4Ua3gs/ZVWx6oOypYoCJhGGScy+8"
        crossorigin="anonymous") 

        //- custom js
        script(src="js/index.js") 